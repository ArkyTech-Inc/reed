<%= form_with(model: pin) do |form| %>
  <% if pin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(pin.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% pin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :course, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.rich_text_area :body, placeholder: "Notes" %>
  </div>

  <div class="col-auto">
     <% form.label :pictures, class:"col-form-label" %>
     <%form.file_field :pictures, multiple: true, class:"form-control" %>
  </div>

  <div>
    <%= form.label :file, style: "display: block" %>
    <%= form.file_field :file %>
  </div>
<br/>

  <div>
    <%= form.submit class:"btn btn-success"%>
  </div>
  
<% end %>
